{% extends "AppBundle::base.html.twig" %}

{% block content %}

<div class="jumbotron">
    <div class="container">
        <h1>SciPub</h1>
        <p>La nouvelle plate-forme de publication pour les scientiques !</p>
        <p>
            <!-- Lien vers la page publier -->
            <a href="{{path('publication_new')}}" class="btn btn-lg btn-primary">
                Publier vos travaux &raquo;
            </a>
        </p>
    </div>
</div>

<div class="container">
    <h2>Denières publications</h2>
    <hr>

    <!-- 3 dernières publications validées (par date de publication) -->

	{% for publication in publications %}

    {% set publication_path = path('publication_show', { 'id': publication.id}) %}
    
.<a href=""></a>
    <div class="publication-thumb">
        <h3><a href="{{ publication_path }}">
                {{ publication.title }}
            </a>
        </h3>
        
        <div>
            <p>
                Publié par <strong>{{ publication.author }}</strong>,
                le <em>{{ publication.publishedAt|date('d/m/Y') }}</em>.
            </p>
            <p>
                {{ publication.content }}
            </p>
            <p>
                <!-- Lien vers le détail de la publication -->
                <a href="{{ publication_path }}"
                   class="btn btn-sm btn-default">
                    Lire la publication
                </a>
            </p>
        </div>
    </div>

    {% if not loop.last %}<hr>{% endif %}
	{% endfor %}

</div>

{% endblock %}

