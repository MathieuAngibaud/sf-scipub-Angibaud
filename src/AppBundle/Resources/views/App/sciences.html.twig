{% extends "AppBundle::base.html.twig" %}

{% block content %}

<div class="jumbotron">
    <div class="container">
        <h1>Sciences</h1>
    </div>
</div>

<div class="container">
    <h2>Liste des sciences</h2>
    <hr>

    {% for science in sciences %}

    <div class="science-thumb">
        <h3>{{science.title}}</h3>
        <div>
            <p>
                {{science.description}}
            </p>
            <p>
                <!-- Lien vers la page dÃ©tail science -->
                <a href="{{ path('science_detail', { 'scienceId': science.id}) }}"
                   class="btn btn-sm btn-default">
                    Voir les publications de la science &laquo;<!-- titre science -->&raquo;
                </a>
            </p>
        </div>
    </div>
    
    {% if not loop.last %}<hr>{% endif %}
    {% endfor %}

</div>


{% endblock %}